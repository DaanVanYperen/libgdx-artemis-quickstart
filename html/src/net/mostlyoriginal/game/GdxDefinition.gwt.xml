<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN"
        "http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module rename-to="html">
    <inherits name='com.badlogic.gdx.backends.gdx_backends_gwt'/>
    <inherits name='com.artemis.backends.artemis_backends_gwt'/>
    <inherits name='com.artemis-json-libgdx'/>
    <inherits name='net.mostlyoriginal.ContribPluginProfiler' />
    <inherits name='net.mostlyoriginal.ContribPluginOperations'/>
    <inherits name='net.mostlyoriginal.ContribEventBus'/>
    <inherits name='net.mostlyoriginal.ContribJam'/>

    <!-- Optional modules. -->
    <!--
    <inherits name='com.badlogic.gdx.physics.box2d.box2d-gwt' />
    <inherits name='Box2DLights' />
    <inherits name='com.badlogic.gdx.ai' />
    <inherits name='com.badlogic.gdx.controllers.controllers-gwt' />
    -->

    <!-- Just include everything. -->
    <extend-configuration-property name="artemis.reflect.include" value="net.mostlyoriginal.game.component"/>
    <extend-configuration-property name="artemis.reflect.include" value="net.mostlyoriginal.game.system"/>
    <extend-configuration-property name="artemis.reflect.include" value="net.mostlyoriginal.game.screen"/>
    <extend-configuration-property name="artemis.reflect.include" value="net.mostlyoriginal.api"/>
    <extend-configuration-property name="artemis.reflect.include" value="com.artemis.SuperMapper"/>
    <extend-configuration-property name="artemis.reflect.include" value="com.artemis.E"/>
    <extend-configuration-property name="artemis.reflect.include" value="java.lang.Class"/>
    <extend-configuration-property name="artemis.reflect.include" value="com.badlogic.gdx.maps.tiled.TiledMap"/>
    <extend-configuration-property name="artemis.reflect.include" value="com.badlogic.gdx.maps.MapRenderer"/>

    <extend-configuration-property name="gdx.reflect.include" value="net.mostlyoriginal.game.component"/>
    <extend-configuration-property name="gdx.reflect.include" value="net.mostlyoriginal.game.system"/>
    <extend-configuration-property name="gdx.reflect.include" value="net.mostlyoriginal.game.screen"/>
    <extend-configuration-property name="gdx.reflect.include" value="net.mostlyoriginal.api"/>

    <inherits name='GdxArtemisComponents'/>
    <inherits name='GdxArtemisGame'/>
    <entry-point class='net.mostlyoriginal.game.client.HtmlLauncher'/>

    <set-configuration-property name='xsiframe.failIfScriptTag' value='FALSE'/>
    <set-configuration-property name="gdx.assetpath" value="../android/assets"/>
</module>
